{
  "name": "pern-polling-app",
  "version": "0.7.2",
  "description": "A simple polling app that allows users to create, manage and participate in polls",
  "main": "app.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate --config=./src/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./src/drizzle.config.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JesstinSwadley/polling-app.git"
  },
  "author": "Jesstin Swadley",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JesstinSwadley/polling-app/issues"
  },
  "homepage": "https://github.com/JesstinSwadley/polling-app#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.5",
    "supertest": "^7.2.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
